@model BookshopManagement.Models.Order

<div class="container mt-4">
    <h2>Delete Order</h2>

    <div class="card p-3">
        <p>Are you sure you want to delete Order <strong>#@Model.OrderId</strong>?</p>
        <p><strong>User:</strong> @Model.User?.UserName ?? "Guest"</p>
        <p><strong>Order Date:</strong> @Model.OrderDate.ToString("yyyy-MM-dd")</p>
        <p><strong>Status:</strong> @Model.Status</p>

        <form asp-action="Delete" asp-route-id="@Model.OrderId" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-action="AdminOrders" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>
