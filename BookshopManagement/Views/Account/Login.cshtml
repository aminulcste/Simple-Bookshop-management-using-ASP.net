@* Views/Account/Login.cshtml *@
@model BookshopManagement.ViewModels.LoginViewModel

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml"; // Minimal layout without navbars
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h3>🔐 Login</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label"></label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Login</button>

                        <div class="mt-3 text-center">
                            <span>Don't have an account?</span>
                            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-secondary btn-sm ms-1">
                                Register
                            </a>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center text-muted">
                    &copy; 2025 Bookshop
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
