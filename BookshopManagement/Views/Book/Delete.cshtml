@model BookshopManagement.Models.Book

@{
    ViewData["Title"] = "Delete Book";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Delete Book</h2>

<h4>Are you sure you want to delete this book?</h4>

<div class="card" style="max-width: 600px;">
    <div class="card-body">
        <p><strong>Title:</strong> @Model.Title</p>
        <p><strong>Author:</strong> @Model.Author</p>
        <p><strong>Category:</strong> @Model.Category?.Name</p>
        <p><strong>Price:</strong> @Model.Price.ToString("C")</p>

        <p><strong>Image:</strong></p>
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="@Model.Title" class="img-thumbnail" style="max-width:250px;" />
        }
        else
        {
            <span>No Image</span>
        }
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="BookId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
