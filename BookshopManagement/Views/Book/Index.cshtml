@model IEnumerable<BookshopManagement.Models.Book>

@{
    ViewData["Title"] = "Manage Books";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; // Use your admin layout here
}

<h2>Manage Books</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Book</a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
            <th>Price</th>
            <th style="width: 180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td style="width:110px;">
                    @if (!string.IsNullOrEmpty(book.ImageUrl))
                    {
                        <img src="@book.ImageUrl" alt="@book.Title" class="img-thumbnail" style="max-width: 100px;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Category?.Name</td>
                <td>@book.Price.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@book.BookId" class="btn btn-info btn-sm me-1">Details</a>
                    <a asp-action="Edit" asp-route-id="@book.BookId" class="btn btn-warning btn-sm me-1">Edit</a>
                    <a asp-action="Delete" asp-route-id="@book.BookId" class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure you want to delete this book?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table> 