@model BookshopManagement.Models.Book

@{
    ViewData["Title"] = "Book Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Book Details</h2>

<div class="card" style="max-width: 600px;">
    <div class="card-header">
        <h4>@Model.Title</h4>
    </div>
    <div class="card-body">
        <p><strong>Author:</strong> @Model.Author</p>
        <p><strong>Category:</strong> @Model.Category?.Name</p>
        <p><strong>Price:</strong> @Model.Price.ToString("C")</p>

        <p><strong>Image:</strong></p>
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="@Model.Title" class="img-thumbnail" style="max-width:250px;" />
        }
        else
        {
            <span>No Image</span>
        }
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.BookId" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
    </div>
</div>
